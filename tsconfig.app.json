{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client"],
    "baseUrl": "./src",
    "paths": {
      "@oo/scripting": ["../.awe/awe-scripting.d.ts"],
      "@awe/scripting": ["../.awe/awe-scripting.d.ts"],
      "@oncyber/*": ["@awe/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
